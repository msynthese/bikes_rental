<p class="mb-2">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <div class="project-info-box mt-0">
          <h1><%= @bike.name.upcase() %></h1>
          <p class="mb-0"> <%= @bike.description %> </p>
        </div>
        <!-- / project-info-box -->
        <div class="project-info-box">
          <p><b>Location:</b> <%= @bike.address %> </p>
          <p><b>Category:</b> <%= @bike.category %></p>
          <p><b>Size:</b> <%= @bike.size %></p>
          <p><b>Price:</b> <%= @bike.price %>.- /day</p>
          <p><b>Owner:</b> <%= "#{@bike.user.first_name} #{@bike.user.last_name}" %></p>
          <p><b>CURRENT USER CHECK:</b> <%= current_user.first_name %></p>
          <p class="mb-0">
          </div>
          <!-- / project-info-box -->
          <div class="project-info-box mt-0 mb-0">
            <p class="mb-0">
              <span class="fw-bold mr-10 va-middle hide-mobile">Share:</span>
              <a href="#x" class="btn btn-xs btn-facebook btn-circle btn-icon mr-5 mb-0"><i class="fab fa-facebook-f"></i></a>
              <a href="#x" class="btn btn-xs btn-twitter btn-circle btn-icon mr-5 mb-0"><i class="fab fa-twitter"></i></a>
              <a href="#x" class="btn btn-xs btn-pinterest btn-circle btn-icon mr-5 mb-0"><i class="fab fa-pinterest"></i></a>
              <a href="#x" class="btn btn-xs btn-linkedin btn-circle btn-icon mr-5 mb-0"><i class="fab fa-linkedin-in"></i></a>
            </p>
          </div>
          <!-- / project-info-box -->
        </div>
        <!-- / column -->
        <div class="col-md-7">
          <img src=<%=@bike.picture_url%> alt="project-image" class="rounded show-bike-img">
          <div class="project-info-box">
            <p><b>Number of Bookings:</b> <%= @bike.number_of_bookings %> </p>
          </div>
          <!-- / project-info-box -->
        </div>
        <!-- / column -->
      </div>
    </div>
    <!--bootstrap source: https://www.bootdey.com/snippets/view/project-details#css-->
